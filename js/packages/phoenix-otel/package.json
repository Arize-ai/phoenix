{
  "name": "@arizeai/phoenix-otel",
  "version": "0.3.0",
  "description": "Otel registration and convenience methods",
  "main": "dist/src/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/src/index.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "pnpm run clean",
    "build": "tsc --build tsconfig.json tsconfig.esm.json && tsc-alias -p tsconfig.esm.json",
    "postbuild": "echo '{\"type\": \"module\"}' > ./dist/esm/package.json",
    "type:check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "files": [
    "dist",
    "src",
    "package.json"
  ],
  "keywords": [
    "otel",
    "arize",
    "phoenix",
    "llm",
    "tracing"
  ],
  "author": "oss@arize.com",
  "license": "Apache-2.0",
  "dependencies": {
    "@arizeai/openinference-semantic-conventions": "^1.1.0",
    "@arizeai/openinference-vercel": "^2.5.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^1.25.1",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.57.2",
    "@opentelemetry/instrumentation": "^0.57.2",
    "@opentelemetry/resources": "^2.0.0",
    "@opentelemetry/sdk-trace-base": "^1.30.1",
    "@opentelemetry/sdk-trace-node": "^1.30.1"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "vitest": "^4.0.10"
  }
}
