{
  "$schema": "../app/node_modules/oxlint/configuration_schema.json",

  "extends": ["../.oxlintrc.json"],

  "plugins": ["typescript", "node"],

  "env": {
    "node": true
  },

  "rules": {
    "eqeqeq": ["error", "smart"]
  },

  "overrides": [
    {
      "files": ["examples/apps/**"],
      "rules": {
        "no-console": "off"
      }
    }
  ],

  "ignorePatterns": ["**/dist/**", "**/build/**", "**/*.{js,jsx,cjs,mjs}"]
}
