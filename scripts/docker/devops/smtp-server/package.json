{
  "name": "phoenix-smtp-dev-server",
  "version": "1.0.0",
  "description": "Development SMTP server for Phoenix with React UI",
  "keywords": [
    "development",
    "email",
    "phoenix",
    "smtp"
  ],
  "license": "MIT",
  "author": "Phoenix Dev Team",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc && pnpm run build:ui",
    "build:ui": "cd ui && pnpm run build",
    "dev": "tsx watch src/server.ts",
    "dev:ui": "cd ui && pnpm run dev",
    "fmt": "oxfmt --config ../../../../.oxfmtrc.jsonc",
    "fmt:check": "oxfmt --check --config ../../../../.oxfmtrc.jsonc",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/static": "^9.0.0",
    "fastify": "^5.7.4",
    "mailparser": "^3.9.3",
    "smtp-server": "^3.18.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/mailparser": "^3.4.6",
    "@types/node": "^25.3.1",
    "@types/smtp-server": "^3.5.12",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.48.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
