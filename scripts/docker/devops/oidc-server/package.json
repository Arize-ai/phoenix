{
  "name": "phoenix-oidc-dev-server",
  "version": "1.0.0",
  "description": "Lightweight OIDC server for Phoenix development testing",
  "license": "MIT",
  "author": "Phoenix Dev Team",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "check": "pnpm run format:check && pnpm run lint",
    "check:all": "pnpm run check && cd frontend && pnpm run check",
    "dev": "tsx watch src/server.ts",
    "fix": "pnpm run format && pnpm run lint:fix",
    "fix:all": "pnpm run fix && cd frontend && pnpm run fix",
    "format": "oxfmt --config ../../../../.oxfmtrc.jsonc",
    "format:check": "oxfmt --check --config ../../../../.oxfmtrc.jsonc",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/static": "^9.0.0",
    "fastify": "^5.7.4",
    "jose": "^6.1.3",
    "pg": "^8.19.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^25.3.1",
    "@types/pg": "^8.16.0",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.48.0",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
