{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "module": "ES6",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["@emotion/react/types/css-prop", "vitest/globals"],
    "baseUrl": "./src",
    "paths": {
      "@phoenix/*": ["*"]
    }
  }
}
