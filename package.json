{
    "name": "phoenix-ui",
    "version": "0.0.1",
    "author": "mikyo@arize.com",
    "license": "None",
    "private": true,
    "dependencies": {
        "@arizeai/components": "0.9.2",
        "@arizeai/point-cloud": "^2.1.1",
        "@emotion/react": "^11.10.5",
        "@react-three/drei": "9.5.7",
        "@react-three/fiber": "8.0.12",
        "polished": "^4.2.2",
        "react": "18.2",
        "react-dom": "18.2",
        "shade": "^0.1.1",
        "three": "0.139",
        "three-stdlib": "^2.17.3"
    },
    "devDependencies": {
        "@types/react-dom": "^18.0.8",
        "esbuild": "^0.15.13",
        "typescript": "^4.8.4"
    },
    "scripts": {
        "prebuild": "rm -rf src/phoenix/server/static",
        "build": "npm run build:static & npm run build:ts",
        "build:static": "cp -r app/static src/phoenix/server",
        "build:ts": "esbuild app/src/index.tsx --bundle --minify --target=es2020 --jsx=automatic --format=esm --outfile=src/phoenix/server/static/index.js",
        "watch": "esbuild app/src/index.tsx --bundle --minify --target=es2020 --jsx=automatic --format=esm --outfile=src/phoenix/server/static/index.js --watch",
        "dev": "npm run dev:server & npm run build:static && npm run watch",
        "dev:server": "python3 ./src/phoenix/server/main.py --primary=primary --reference=reference",
        "typecheck": "tsc --noEmit"
    }
}
